pipeline {
    agent { label 'jenkins-slave' }
    stages {
        stage('First Stage') {
            steps {
                echo 'Step 1. Hello World'
                sleep 60
            }
        }
        stage('Second Stage') {
            steps {
                echo 'Step 2. Second time Hello'
                echo 'Step 3. Third time Hello'
            }
        }
    }
}
